---
import { getLanguageFromURL } from "@/i18n/utils";
import type { CollectionEntry } from "astro:content";

type Props = {
  project: CollectionEntry<"projects">;
};
const { project }: Props = Astro.props;
const lang = getLanguageFromURL(Astro.url.pathname);
---

<div class="mb-6 pb-1 border-b border-baseDark/25 dark:border-baseLight/25">
  <a
    href=`/${lang}/projects/${project.slug.split("/")[1]}`
    class="hover:opacity-75 leading-relaxed"
  >
    <h1 class="font-bold text-lg md:text-base">{project.data.title}</h1>
    <p class="">{project.data.description}</p>
  </a>
</div>
