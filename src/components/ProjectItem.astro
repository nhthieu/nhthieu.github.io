---
import type { CollectionEntry } from "astro:content";

type Props = {
  project: CollectionEntry<"projects">;
};
const { project }: Props = Astro.props;
---

<div class="mb-6">
  <a
    href=`/projects/${project.slug}`
    class="hover:opacity-75 transition-all duration-200 ease-out leading-relaxed"
  >
    <h1 class="font-bold text-xl md:text-xl">{project.data.title}</h1>
    <p class="md:text-base">{project.data.description}</p>
  </a>
</div>
