---
type Props = {
  title: string;
  contentType: string;
  author?: string;
  publishDate?: string;
  readingTime?: number;
  url?: string;
};

const { title, contentType, author, publishDate, readingTime, url }: Props =
  Astro.props;
---

<div class="mb-12 leading-relaxed">
  <h1
    class="font-bold text-2xl md:text-xl mb-1"
  >
    # {title}
  </h1>
  {
    contentType === "blog" ? (
      <div class="flex items-center space-x-2 text-foreground/75 text-sm">
        <p>{author}</p>
        <p>•</p>
        <p>{publishDate}</p>
        <p>•</p>
        <p>{readingTime}</p>
      </div>
    ) : (
      <div class="flex items-center space-x-2 text-foreground/75">
        <a href={url || "/"} target="_blank">
          &#128279; Visit the project
        </a>
      </div>
    )
  }
</div>
