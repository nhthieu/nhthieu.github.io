---
import type { TocItem } from "@/lib/generateToc";
import type { MarkdownHeading } from "astro";

type Props = {
  heading: TocItem;
};

const { heading }: Props = Astro.props;
---

<li>
  <a href={"#" + heading.slug} class="hover:underline">
    {heading.text}
  </a>
  {
    heading.children.length > 0 && (
      <ul>
        {heading.children.map((subheading: any) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
