---
import type { MarkdownHeading } from "astro";
import TableOfContents from "@/components/TableOfContents.astro";

type Props = {
  headings: MarkdownHeading[];
  toc?: boolean;
};

const { headings, toc = true }: Props = Astro.props;
---

<article
  id="article"
  class="prose prose-base md:prose-sm dark:prose-invert max-w-none prose-pre:border-foreground prose-pre:!bg-codeblock prose-code:bg-codeblock prose-code:text-code prose-code:rounded-sm prose-hr:border prose-thead:border-foreground/50 prose-tr:border-foreground/50 prose-blockquote:border-muted-foreground prose-a:text-primary prose-figcaption:text-center prose-figcaption:text-xs prose-img:mx-auto prose-code:p-0.5 "
>
  {toc && <TableOfContents headings={headings} className="mb-12" />}
  <slot />
</article>
