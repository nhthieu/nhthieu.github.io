---
import type { CollectionEntry } from "astro:content";
import BlogTag from "./BlogTag.astro";
import { getLanguageFromURL } from "@/i18n/utils";

type Props = {
  post: CollectionEntry<"blog">;
};
const { post }: Props = Astro.props;

const lang = getLanguageFromURL(Astro.url.pathname);
---

<div class="mb-6 pb-1 border-b border-baseDark/25 dark:border-baseLight/25">
  <a href=`/${lang}/blog/${post.slug.split('/')[1]}` class="hover:opacity-75 leading-relaxed">
    <h1 class="font-bold text-lg md:text-base">{post.data.title}</h1>
    <div class="flex items-center space-x-2 text-dark/75 dark:text-light/75">
      <p>{post.data.publishDate.toLocaleDateString()}</p>
      <p>â€¢</p>
      <p>{post.data.readingTime} min read</p>
    </div>
