---
import type { CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"blog">;
};
const { post }: Props = Astro.props;
---

<div class="mb-4">
  <a
    href=`/blog/${post.slug}`
    class="hover:opacity-75 transition-all duration-200 ease-out leading-relaxed"
  >
    <h1 class="font-bold text-2xl md:text-xl">{post.data.title}</h1>
    <div
      class="flex items-center space-x-4 text-dark/75 dark:text-light/75 pb-2"
    >
      <p>{post.data.publishDate.toLocaleDateString()}</p>
      <p>&#128218; {post.data.readingTime} min read</p>
    </div>
    <!-- <p class="text-lg">{post.data.description}</p> -->
  </a>
</div>
