---
import ThemeToggle from "./ThemeToggle";

type Props = {
  className?: string;
};

const { className }: Props = Astro.props;
---

<header class="h-20 mb-12 w-full">
  <div class={`${className} flex items-center justify-between mx-auto h-full`}>
    <div class="flex space-x-4">
      <a
        class=`hover:text-primary ${Astro.url.pathname === '/' && 'underline text-primary'}`
        href="/">Home</a
      >
      <a
        class=`hover:text-primary ${Astro.url.pathname.includes('/projects') && 'underline text-primary' }`
        href="/projects">Projects</a
      >
      <a
        class=`hover:text-primary ${Astro.url.pathname.includes('/blog') && 'underline text-primary'}`
        href="/blog/1">Blog</a
      >
      <a
        class=`hover:text-primary ${Astro.url.pathname.includes('/about') && 'underline text-primary'}`
        href="/about">About</a
      >
    </div>
    <ThemeToggle client:only="react"/>
  </div>
</header>
