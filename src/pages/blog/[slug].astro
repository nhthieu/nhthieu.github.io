---
import MainLayout from "@/layouts/MainLayout.astro";
import Article from "@/components/Article.astro";
import { getCollection, CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  return allPosts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as { entry: CollectionEntry<"blog"> };
const { Content, headings } = await entry.render();
---

<MainLayout title={`Hieu Nguyen - ${entry.data.title}`}>
  <div class="mb-16">
    <a
      href="/blog"
      class="inline-block mb-2 text-dark/75 dark:text-light/75 hover:underline transition-all duration-200 ease-out"
    >
      &#x2190; Back
    </a>
    <h1 class="font-bold text-3xl md:text-2xl mb-2">{entry.data.title}</h1>
    <div class="flex items-center space-x-2 text-dark/75 dark:text-light/75">
      <p>{entry.data.author}</p>
      <p>•</p>
      <p>{entry.data.publishDate.toLocaleDateString()}</p>
      <p>•</p>
      <p>{entry.data.readingTime} min read</p>
    </div>
  </div>

  <Article headings={headings}>
    <Content />
  </Article>
</MainLayout>
