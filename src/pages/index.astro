---
import Article from "@/components/Article.astro";
import Hero from "@/components/Hero.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { getEntry } from "astro:content";

const data = await getEntry("info", "welcome");
const { Content, headings } = await data.render();
---

<MainLayout title="Hieu Nguyen - Home">
	<div class="w-full">
		<Hero />
		<section id="about" class="w-full mt-8">
			<Article headings={headings} toc={false}>
				<Content />
			</Article>

			<div class="flex flex-col mt-6">
				<a href="/cv.pdf" target="_blank" class="italic hover:underline"
					>&#128279; View my full resume
				</a>
				<a
					href="mailto:nguyenhotrunghieu0106@gmail.com"
					class="italic hover:underline">&#128231; Get in touch</a
				>
			</div>
		</section>
	</div>
</MainLayout>
